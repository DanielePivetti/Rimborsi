<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% if title %}{{ title }} - {% endif %}Rimborsi Articoli 40</title>
    <!-- Bootstrap Italia CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-italia@2.6.1/dist/css/bootstrap-italia.min.css">
    <!-- Fonts -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-italia@2.6.1/dist/fonts/font-awesome.min.css">
    <link rel="stylesheet" href="{{ url_for('static', filename='css/style.css') }}">
</head>
<body>
    <div class="it-header-wrapper">
        <div class="it-header-slim-wrapper">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="it-header-slim-wrapper-content">
                            <a class="d-none d-lg-block navbar-brand" href="#">Agenzia regionale per la sicurezza territoriale e la protezione civile EMILIA-ROMAGNA</a>
                            <div class="nav-mobile">
                                <nav>
                                    <a class="it-opener d-lg-none" data-bs-toggle="collapse" href="#menu-principale" role="button" aria-expanded="false" aria-controls="menu-principale">
                                        <span>Agenzia regionale per la sicurezza territoriale e la protezione civile EMILIA-ROMAGNA</span>
                                        <svg class="icon">
                                            <use href="https://cdn.jsdelivr.net/npm/bootstrap-italia@2.6.1/dist/svg/sprites.svg#it-expand"></use>
                                        </svg>
                                    </a>
                                </nav>
                            </div>
                            <div class="it-header-slim-right-zone">
                                <div class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown" aria-expanded="false">
                                        <span>ITA</span>
                                        <svg class="icon d-none d-lg-block">
                                            <use href="https://cdn.jsdelivr.net/npm/bootstrap-italia@2.6.1/dist/svg/sprites.svg#it-expand"></use>
                                        </svg>
                                    </a>
                                    <div class="dropdown-menu">
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="link-list-wrapper">
                                                    <ul class="link-list">
                                                        <li><a class="list-item" href="#"><span>ITA</span></a></li>
                                                        <li><a class="list-item" href="#"><span>ENG</span></a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {% if current_user.is_authenticated %}
                                <div class="it-access-top-wrapper">
                                    <a class="btn btn-primary btn-sm" href="{{ url_for('auth.logout') }}">Logout</a>
                                </div>
                                {% else %}
                                <div class="it-access-top-wrapper">
                                    <a class="btn btn-primary btn-sm" href="{{ url_for('auth.login') }}">Accedi</a>
                                </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="it-header-center-wrapper">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="it-header-center-content-wrapper">
                            <div class="it-brand-wrapper">
                                <a href="{{ url_for('main.index') }}">
                                    <div class="it-brand-text">
                                        <h2 class="no_toc">Procedura per la trasmissione Rimborsi Articoli 40</h2>
                                        <h3 class="no_toc d-none d-md-block">Ai sensi del Decreto legislativo 2 gennaio 2018, n. 1</h3>
                                    </div>
                                </a>
                            </div>
                            <div class="it-right-zone">
                                <div class="it-user-wrapper">
                                    <span class="d-none d-md-block">{% if current_user.is_authenticated %}Benvenuto, {{ current_user.nome }} {{ current_user.cognome }}{% endif %}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="it-header-navbar-wrapper">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <nav class="navbar navbar-expand-lg has-megamenu">
                            <button class="custom-navbar-toggler" type="button" aria-controls="nav10" aria-expanded="false" aria-label="Toggle navigation" data-bs-target="#nav10">
                                <svg class="icon">
                                    <use href="https://cdn.jsdelivr.net/npm/bootstrap-italia@2.6.1/dist/svg/sprites.svg#it-burger"></use>
                                </svg>
                            </button>
                            <div class="navbar-collapsable" id="nav10">
                                <div class="overlay"></div>
                                <div class="close-div">
                                    <button class="btn close-menu" type="button">
                                        <span class="visually-hidden">Chiudi</span>
                                        <svg class="icon">
                                            <use href="https://cdn.jsdelivr.net/npm/bootstrap-italia@2.6.1/dist/svg/sprites.svg#it-close-big"></use>
                                        </svg>
                                    </button>
                                </div>
                                <div class="menu-wrapper">
                                    <ul class="navbar-nav">
                                        <li class="nav-item">
                                            <a class="nav-link" href="{{ url_for('main.index') }}">
                                                <span>Home</span>
                                            </a>
                                        </li>
                                        {% if current_user.is_authenticated %}
                                        <li class="nav-item">
                                            <a class="nav-link" href="{{ url_for('main.dashboard') }}">
                                                <span>Dashboard</span>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="{{ url_for('richiesta.lista_richieste') }}">
                                                <span>Le mie richieste</span>
                                            </a>
                                        </li>
                                        {% if current_user.is_admin() %}
                                        <li class="nav-item">
                                            <a class="nav-link" href="{{ url_for('evento.lista_eventi') }}">
                                                <span>Eventi</span>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="{{ url_for('odv.lista_odv') }}">
                                                <span>Organizzazioni</span>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="{{ url_for('mezzo.lista_mezzi') }}">
                                                <span>Mezzi</span>
                                            </a>
                                        </li>
                                        {% endif %}
                                        {% endif %}
                                    </ul>
                                </div>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <main class="container my-4">
        {% with messages = get_flashed_messages(with_categories=true) %}
            {% if messages %}
                {% for category, message in messages %}
                    {% if category == 'message' %}
                        {% set category = 'info' %}
                    {% endif %}
                    <div class="alert alert-{{ category }} alert-dismissible fade show">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}
            {% endif %}
        {% endwith %}
        
        {% block content %}{% endblock %}
    </main>

    <footer class="it-footer">
        <div class="it-footer-main">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <!-- Footer vuoto come richiesto -->
                    </div>
                </div>
            </div>
        </div>
        <div class="it-footer-small-prints bg-primary">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="it-footer-links-wrapper">
                            <ul class="it-footer-links">
                                <li><a href="#" title="Contatti">Contatti</a></li>
                                <li><a href="#" title="Accessibilità">Accessibilità</a></li>
                                <li><a href="#" title="Privacy">Privacy</a></li>
                            </ul>
                        </div>
                        <!-- Copyright rimosso -->
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap Italia JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-italia@2.6.1/dist/js/bootstrap-italia.bundle.min.js"></script>
    <script src="{{ url_for('static', filename='js/script.js') }}"></script>
</body>
</html>
